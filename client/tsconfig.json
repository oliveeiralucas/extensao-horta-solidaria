{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./app/*"],
      "@root/*": ["./*"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "components/site/home/fullScreenImage.tsx",
    "components/site/home/gallery.tsx",
    "app/site/page.tsx",
    "components/site/home/informations.tsx",
    "components/site/home/justify.tsx",
    "components/site/home/mission.tsx",
    "components/site/home/sponsors.tsx",
    "components/site/home/video.tsx"
  ],
  "exclude": ["node_modules"]
}
